# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = tab
indent_size = 4

# JSON, YAML, and configuration files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# JavaScript and CSS files
[*.{js,css,scss}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# XML files
[*.xml]
indent_style = tab
indent_size = 4
